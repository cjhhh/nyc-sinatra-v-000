<h1>Add a Historical Figure here! <h1>

<form method='post' action='/figures'>
 <label> Historical Figure Name: </label>

 <input type="text" name="figure[name]" id="figure_name">
  <br></br>

<label>Current Title: </label>
 <% Title.all.each do |title| %>
 <label> <%= title.name %> </label>
    <input type="checkbox" value="<%=title.id%>" id="title_<%=title.id%>" name="figure[title_ids][]"></input>
 <% end %>

<br>

<label>Current Landmark: </label>
 <% Landmark.all.each do |landmark| %>
    <%= landmark.name %>
    <input type="checkbox" value="<%=landmark.id%>" id="<%=landmark.id%>" name="figure[landmark_ids][]"></input>
 <% end %>



  <label> Add another Landmark to the historical figure here: </label>
    <input type="text" name="landmark[name]" placeholder="Landmark Name">
    <input type="text" name=landmark[year_completed] placeholder="Year of completion">
   <br></br>

 <label> Add another Title to the historical figure here: </label>
   <input type="text" name="title[name]">
   <br></br>

<input type="submit" value="Create New Figure">
</form>
